# ============================================
# CONFIGURAÇÃO DO BANCO DE DADOS REMOTO (SOURCE)
# ============================================
# Este é o banco PostgreSQL EXTERNO onde está a view vw_conversas_por_lead
SOURCE_DB_HOST=seu_host_aqui
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=seu_database_aqui
SOURCE_DB_USER=seu_usuario_aqui
SOURCE_DB_PASSWORD=sua_senha_aqui
SOURCE_DB_VIEW=vw_conversas_por_lead

# ============================================
# CONFIGURAÇÃO DO BANCO DE DADOS LOCAL
# ============================================
# Este é o banco PostgreSQL LOCAL onde os dados serão armazenados
LOCAL_DB_HOST=/var/run/postgresql
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=allpfit_analytics
LOCAL_DB_USER=seu_usuario_local
LOCAL_DB_PASSWORD=
LOCAL_DB_TABLE=conversas_lead

# ============================================
# CONFIGURAÇÕES GERAIS
# ============================================
DATA_DIR=data
LOG_LEVEL=INFO
